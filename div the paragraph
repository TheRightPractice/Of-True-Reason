file_txt = open("t.txt", "r", encoding = "utf-8")

a = file_txt.readlines()


s=0
b=0
e=len(a)
print("전체 줄의 수는 : ", e)
div=input("단위 줄 : ")

d = s + int(div)

for i in range(s, e+1, int(div)):
    b += 1

    final_txt = open(f"t{b}.txt", "w", encoding = "utf-8")
    
    arr = a[int(s):int(s+int(div))]
    arr_final = ''.join(map(str, arr))
    print(arr_final, file = final_txt)
    final_txt.close()

    s = s + int(div)

file_txt.close()
